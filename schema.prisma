datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  owner
  tenant
  staff
}

model User {
  id          Int      @id @default(autoincrement())
  email       String?
  picture     String?
  role        Role?
  name        String?
  phoneNumber String?
  Society     Society?
}

model Society {
  id          Int    @id @default(autoincrement())
  name        String
  address     String
  type        String
  createdById Int    @unique
  createdBy   User   @relation(fields: [createdById], references: [id])
}
