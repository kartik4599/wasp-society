datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  owner
  tenant
  staff
}

model User {
  id          Int      @id @default(autoincrement())
  email       String?
  picture     String?
  role        Role?
  name        String?
  phoneNumber String?
  Society     Society?
  Unit        Unit[]
}

model Society {
  id          Int        @id @default(autoincrement())
  name        String
  address     String
  type        String
  createdById Int        @unique
  createdBy   User       @relation(fields: [createdById], references: [id])
  Buildings   Building[]
}

model Building {
  id        Int     @id @default(autoincrement())
  name      String
  floors    Int?
  societyId Int
  society   Society @relation(fields: [societyId], references: [id])
  Unit      Unit[]
}

model Unit {
  id              Int      @id @default(autoincrement())
  name            String
  type            String
  floor           Int?
  buildingId      Int
  building        Building @relation(fields: [buildingId], references: [id])
  allocatedUserId Int?
  allocatedTo     User?    @relation(fields: [allocatedUserId], references: [id])
}
